# Django Settings
# ===============
# SECURITY: Change SECRET_KEY in production!
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=hackathon-demo-only-not-for-production

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts (e.g. your-app.azurewebsites.net,localhost)
# Use * for development (allows all hosts)
ALLOWED_HOSTS=*

# Gemini AI Act Configuration
# ============================
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=

# Gemini File Search Store name (optional)
# Set this if you've run scripts/setup_ai_act_store.py
# The store name will be saved to ai_act_store_info.txt after setup
AI_ACT_STORE_NAME=

# Gemini model to use (free tier options: gemini-2.5-flash, gemini-2.5-flash-lite, gemini-3-flash-preview)
# Note: gemini-1.5-* models are deprecated
AI_ACT_MODEL_NAME=gemini-2.5-flash

# Use File Search Store (True) or manual context (False)
# - True: Uses Gemini File Search Store (slower but more accurate, requires store setup)
# - False: Uses manual context from local files (faster, no store needed)
AI_ACT_USE_FILE_SEARCH=False

# API timeout in seconds
AI_ACT_API_TIMEOUT=30
